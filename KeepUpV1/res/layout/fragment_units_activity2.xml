<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:scrollbarStyle="insideOverlay"
    android:scrollbars="vertical"
    tools:context="com.example.keepupv1.UnitsActivity2$PlaceholderFragment" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="17dp"
        android:clickable="false"
        android:focusable="false"
        android:longClickable="false"
        android:text="@string/keeping_up_with"
        android:textSize="@dimen/keepingUpWithHeadingSize" />

    <EditText
        android:id="@+id/noUnits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_toEndOf="@dimen/keepingUpWithHeadingSize"
        android:layout_toRightOf="@+id/textView1"
        android:clickable="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:longClickable="false"
        android:maxLines="@integer/maxUnitLength"
        android:text="@string/noOfUnits"
        android:textAlignment="inherit"
        android:textSize="@dimen/keepingUpWithHeadingSize" />

    <SearchView
        android:id="@+id/searchView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView1"
        android:layout_below="@+id/noUnits"
        android:layout_marginRight="29dp"
        android:clickable="true"
        android:contentDescription="@string/search_units"
        android:gravity="center_vertical|center_horizontal"
        android:iconifiedByDefault="true"
        android:inputType="text"
        android:maxWidth="@dimen/activity_horizontal_margin"
        android:queryHint="@string/search_units"
        android:visibility="visible" >
    </SearchView>

    <EditText
        android:id="@+id/unit_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/searchView1"
        android:clickable="false"
        android:ems="10"
        android:longClickable="false"
        android:text="@string/unit_1_heading" />

    <EditText
        android:id="@+id/EditText01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/unit_1"
        android:layout_centerVertical="true"
        android:clickable="false"
        android:ems="10"
        android:longClickable="false"
        android:text="@string/unit_1_heading" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/EditText02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/EditText01"
        android:layout_below="@+id/EditText01"
        android:layout_marginTop="78dp"
        android:clickable="false"
        android:ems="10"
        android:longClickable="false"
        android:text="@string/unit_1_heading" />

</RelativeLayout>