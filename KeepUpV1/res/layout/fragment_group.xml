<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.keepupv1.Group$PlaceholderFragment" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:clickable="false"
        android:focusable="false"
        android:longClickable="false"
        android:text="@string/keeping_up_with"
        android:textSize="@dimen/keepingUpWithHeadingSize" />

    <EditText
        android:id="@+id/noUnits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView1"
        android:layout_alignWithParentIfMissing="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@dimen/keepingUpWithHeadingSize"
        android:layout_toRightOf="@+id/textView1"
        android:clickable="false"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:longClickable="false"
        android:maxLines="@integer/maxUnitLength"
        android:text="@string/keeping_up_with_1_grp"
        android:textAlignment="inherit"
        android:textSize="@dimen/keepingUpWithHeadingSize" />

    <EditText
        android:id="@+id/unit_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="72dp"
        android:clickable="false"
        android:ems="10"
        android:longClickable="false"
        android:text="@string/unit_1_heading" />

</RelativeLayout>
