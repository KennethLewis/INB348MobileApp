<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/news_update"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="6pt"
    android:layout_marginBottom="4pt"
    android:padding="4pt"
    android:background="#dddddd"
    android:orientation="vertical">
    
    <TextView
        android:id="@+id/post_source"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:text="@string/user_name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/news_date_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:text="@string/example_time"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="4pt" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4pt" >

        <TextView
            android:id="@+id/news_article"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:text="@string/newsfeed_item_content_announcement"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="6pt" />
    </LinearLayout>


</LinearLayout>
